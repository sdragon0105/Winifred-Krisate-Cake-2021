<div class="page-width">
    {% if
        section.settings.top_subheading != blank or
        section.settings.title != blank
    %}
        <div class="section-header__subtitle">
            <h3>{{ section.settings.top_subheading }}</h3>
        </div>
        <div class="section-header__title title-uppercase"><h1>{{  section.settings.title }}</h1></div>
    {% endif %}

    <div class="feature-row">
        {%comment%} {%endcomment%}
        {%- for block in section.blocks -%}
            <div class="">
                {% if block.settings.image != blank %}
                    <div class="text-content">
                        {%- assign img_url = block.settings.image | img_url -%}
                        <img src="{{ img_url }}" class="subscribe_number_size">
                        <p>{{ block.settings.content }}</p>
                    </div>

                {% else %}
                    {{ 'image' | placeholder_svg_tag: 'image' }}
                {% endif %}

            </div>
        {%- endfor -%}
    </div>


    {%- if section.settings.link_text != blank -%}
        <div class="hero__link">
        {%- if section.settings.link_text != blank -%}
            <a href="{{ section.settings.link }}" class="btn{% if section.settings.color_accent contains 'rgba(0,0,0,0)' %} btn--inverse{% endif %}">
            {{ section.settings.link_text }}
            </a>
        {%- endif -%}
        </div>
    {%- endif -%}
</div>

{% schema %}
{
    "name": "Get Started",
    "settings": [
        {
            "type": "text",
            "id": "top_subheading",
            "label": "Subheading"
        },
        {
            "type": "textarea",
            "id": "title",
            "label": "Heading",
            "default": "Two line\ntitle slide."
        },
        {
            "type": "url",
            "id": "link",
            "label": "Slide link"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Slide link text",
            "default": "Optional button"
        },
        {
            "type": "color",
            "id": "color_accent",
            "label": "Buttons",
            "default": "rgba(0,0,0,0)"
        }
    ],
    "presets": [{
        "name": "Product page",
        "category": "Product"
    }],
    "blocks": [
       {
           "type": "text",
           "name": "Content",
           "settings":[
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "textarea",
                    "id": "content",
                    "label": "Content",
                    "default": "Choose the Subscribe"
                }
            ]
       }
    ]
}
{% endschema %}